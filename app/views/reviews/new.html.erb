<div class="container">
  <h1>Add a Review</h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content, required: true %>
    <%= f.input :rating, collection: Review::RATINGS %>
    <%= f.submit %>
  <% end %>

  <%= link_to 'Home', restaurants_path, class: "btn btn-primary" %>
</div>
